{
  "name": "hello-world-variations",
  "version": "1.0.0",
  "description": "Multiple implementations of Hello World demonstrating different approaches",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "cli": "node src/cli.js",
    "web": "npx serve web -p 3000",
    "test": "node --test tests/",
    "lint": "eslint src/",
    "format": "prettier --write .",
    "dev": "nodemon src/index.js",
    "build": "esbuild src/cli.js --bundle --platform=node --outfile=dist/hello-cli.js",
    "demo": "npm run cli && echo '---' && npm run start"
  },
  "keywords": [
    "hello-world",
    "cli",
    "web",
    "demo"
  ],
  "author": "Claude Flow Implementation Agent",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.57.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "serve": "^14.2.1",
    "esbuild": "^0.20.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "figlet": "^1.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}