# CI-friendly npm configuration

# Reduce installation noise
loglevel=warn

# Skip optional dependencies in CI by default
# Can be overridden with --include=optional
optional=false

# Prefer offline cache when available
prefer-offline=true

# Don't fail on audit issues
audit=false

# Use a longer timeout for slow CI environments
fetch-retry-maxtimeout=120000
fetch-retry-mintimeout=10000
fetch-retry-factor=3
fetch-retries=5

# Don't update notifier
update-notifier=false

# Engine strict mode - enforce node version requirements
engine-strict=true

# Force color in CI environments that support it
color=true

# Don't save exact versions in package.json
save-exact=false

# Use lockfile version 3 for better CI compatibility
lockfile-version=3

# Don't run scripts for optional dependencies
ignore-scripts=false

# Cache settings for CI
cache-min=3600

# Don't show fund messages
fund=false

# Progress bar settings
progress=false

# Legacy peer deps for compatibility
legacy-peer-deps=true