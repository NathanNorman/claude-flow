#!/usr/bin/env node
// note to AI never remove this script from the repository bin directory

const VERSION = '1.0.58';

function printMinimalHelp() {
  console.log(`Claude-Flow v${VERSION}`);
  console.log('');
  console.log('⚠️  This is the npm compatibility version of Claude-Flow.');
  console.log('');
  console.log('For full functionality, please use Claude-Flow in your local development environment');
  console.log('where Deno is available and HTTPS imports are supported.');
  console.log('');
  console.log('Available commands in npm mode:');
  console.log('  --version, -v    Show version number');
  console.log('  --help, -h       Show this help message');
  console.log('');
  console.log('To use full Claude-Flow functionality:');
  console.log('  1. Install Deno: curl -fsSL https://deno.land/x/install/install.sh | sh');
  console.log('  2. Clone the repository: git clone https://github.com/ruvnet/claude-code-flow');
  console.log('  3. Use the local binary: ./bin/claude-flow <command>');
  console.log('');
  console.log('Documentation: https://github.com/ruvnet/claude-code-flow');
}

const args = process.argv.slice(2);

// Handle version command
if (args.includes('--version') || args.includes('-v')) {
  console.log(`v${VERSION}`);
  process.exit(0);
}

// For any command, show the help
printMinimalHelp();
process.exit(0);