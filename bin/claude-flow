#!/usr/bin/env bash

# Claude-Flow CLI Wrapper
# This script runs the Claude-Flow CLI using Node.js

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PROJECT_ROOT="$( cd "$SCRIPT_DIR/.." && pwd )"

# Run the simple CLI using Node.js
exec node "$PROJECT_ROOT/src/cli/simple-cli.js" "$@"